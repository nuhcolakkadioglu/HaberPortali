
@{
    ViewBag.Title = "Login";
    Layout = null;
}
@model HaberPortali.Admin.Models.DTO.KullaniciVM

<link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
<!-- Custom CSS -->
<link href="~/Content/css/sb-admin.css" rel="stylesheet">
<!-- Custom Fonts -->
<link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

<div id="wrapper">

    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h2>@ViewBag.Mesaj</h2>
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <label>Kullanc adı</label>
                                    @Html.TextBoxFor(m=>m.Email,new { @class= "form-control",@autofocus= "autofocus" })
                                    <p class="help-block">...</p>
                                </div>
                                <div class="form-group">
                                    <label>şifre</label>
                                    @Html.PasswordFor(m => m.Sifre, new { @class = "form-control" })
                                </div>
                                <input type="submit" value="Giriş" class="btn btn-default" />
                            }

                        </div>
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </div>

        </div>










        <script src="~/Scripts/js/jquery.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="~/Scripts/js/bootstrap.min.js"></script>
